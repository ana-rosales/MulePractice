<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:db="http://www.mulesoft.org/schema/mule/db" xmlns:http="http://www.mulesoft.org/schema/mule/http" xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">
	<flow name="dbinsert-flw">
		<http:listener config-ref="httplistener-cfg" path="in" allowedMethods="POST">
			<!-- muestra el resultado del insert -->
			<http:response>
				<http:body>Â¡Producto insertado exitosamente!</http:body>
			</http:response>
			<http:error-response>
				<http:body>#[payload]</http:body>
			</http:error-response>
		</http:listener>
		<db:insert config-ref="db-cfg">
			<db:sql>insert into prenda (id_tipo,nombre) values (:tipo_in,:nom_in)</db:sql>
			<!-- obtener contenido de POST -->
			<db:input-parameters>
				#[
					output application/json
					---
					{
						tipo_in: payload.id_tipo,
						nom_in: payload.nombre
					}
				]
			</db:input-parameters>
		</db:insert>
	</flow>
	<flow name="dbquery-flw">
		<db:listener table="prenda" config-ref="db-cfg" watermarkColumn="id" idColumn="id">
			<scheduling-strategy >
				<fixed-frequency timeUnit="SECONDS" frequency="5"/>
			</scheduling-strategy>
		</db:listener>
		<!-- -->
		<db:select config-ref="db-cfg">
			<db:sql>
				select p.id, p.nombre prenda, t.nombre tipo 
				from prenda p left join tipo t on (p.id_tipo = t.id)
				where p.id = :id_in
			</db:sql>
			<db:input-parameters>
				#[
					output application/json
					---
					{
						id_in: payload.id
					}
				]
			</db:input-parameters>
		</db:select>
		<logger message="Prenda ingresada: #[payload.id]" />
	</flow>
</mule>
